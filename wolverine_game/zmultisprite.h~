#ifndef ZMULTISPRITE__H
#define ZMULTISPRITE__H
#include <string>
#include <vector>
#include "drawable.h"

class ZMultiSprite : public Drawable {
public:
  ZMultiSprite(const std::string&);
  ZMultiSprite(const ZMultiSprite&);
  virtual ~ZMultiSprite() { } 

  virtual void draw() const;
  virtual void update(Uint32 ticks);
  virtual const Frame* getFrame() const { 
    return frames[currentFrame]; 
  }
  void changeDirection(int dir)
  {
	 direction = dir; 
  }
  int getDirection()
  {
	 return direction;
  }

protected:
  const std::vector<Frame *> frames;
  int worldWidth;
  int worldHeight;

  unsigned currentFrame;
  unsigned numberOfFrames;
  unsigned frameInterval;
  float timeSinceLastFrame;
  int frameWidth;
  int frameHeight; 
  

  void advanceFrame(Uint32 ticks);
  int direction;
};



#endif
