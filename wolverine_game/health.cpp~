#include "health.h"
#include <iostream>
#include <string>
#include <iomanip>
#include "gamedata.h"
#include "aaline.h"

Health::Health(){}
void Health::drawHud(SDL_Surface * const& screen, const IOManager& io) const{

const int HUD_WIDTH = 350;
const int HUD_HEIGHT = 200;
int x = 40;
int y = 40;

const Uint32 RED = SDL_MapRGB(screen->format, 0xff, 0,0);
Draw_AALine(screen, x, y+HUD_HEIGHT/2, x+HUD_WIDTH, y+HUD_HEIGHT/2, HUD_HEIGHT, 0xff, 0xff, 0xff, 0xff/2);
io.printMessageAt("Press:", x+10, y+5);
Draw_AALine(screen, x,y,x+HUD_WIDTH,y, RED);

}
